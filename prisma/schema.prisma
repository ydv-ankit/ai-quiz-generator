generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  age        Int
  profession Profession
  Quiz       Quiz[]
}

model Quiz {
  id       String     @id @default(uuid())
  userId   String
  user     User       @relation(references: [id], fields: [userId])
  Question Question[]
}

model Question {
  id            String  @id @default(uuid())
  quizId        String
  question      String
  choices       String
  correctChoice Choices
  quiz          Quiz    @relation(references: [id], fields: [quizId])
}

enum Profession {
  STUDENT
  TEACHER
}

enum Choices {
  A
  B
  C
  D
}
